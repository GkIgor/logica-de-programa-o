{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-array",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-g",
        "${workspaceFolder}/array/Main.cpp",
        "-o",
        "${workspaceFolder}/array/Main"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
